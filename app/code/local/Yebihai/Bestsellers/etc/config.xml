<config>
    <modules>
        <Yebihai_Bestsellers>
            <version>0.1.7</version>
        </Yebihai_Bestsellers>
    </modules>
    <global>
        <models>
            <bestsellers>
                <class>Yebihai_Bestsellers_Model</class>
            </bestsellers>
        </models>
        <blocks>
            <bestsellers>
                <class>Yebihai_Bestsellers_Block</class>
            </bestsellers>
        </blocks>
        <helpers>
            <bestsellers>
                <class>Yebihai_Bestsellers_Helper</class>
            </bestsellers>
        </helpers>
    </global>
    <adminhtml>
    	<translate>
		    <modules>
		        <Yebihai_Bestsellers>
		            <files>
		                <default>Yebihai_Bestsellers.csv</default>
		            </files>
		        </Yebihai_Bestsellers>
		    </modules>
		</translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bestsellers>
                                            <title>Bestsellers</title>
                                        </bestsellers>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>			
    </adminhtml>
    <default>
        <bestsellers>
            <bestsellers>
                <num_displayed_products>3</num_displayed_products>
            </bestsellers>
        </bestsellers>
    </default>
</config>
