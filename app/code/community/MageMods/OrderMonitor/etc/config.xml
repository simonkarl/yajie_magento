<config>
    <modules>
        <MageMods_OrderMonitor>
            <version>1.2.1</version>
        </MageMods_OrderMonitor>
    </modules>
    <crontab>
        <jobs>
            <ordermonitor_cron>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>ordermonitor/cron::run</model>
                </run>
            </ordermonitor_cron>
        </jobs>
    </crontab>
    <global>
        <models>
            <ordermonitor>
                <class>MageMods_OrderMonitor_Model</class>
            </ordermonitor>
        </models>
        <helpers>
            <ordermonitor>
                <class>MageMods_OrderMonitor_Helper</class>
            </ordermonitor>
        </helpers>
        <sales>
            <order>
                <states>
                    <pending_payment>
                        <visible_on_front>1</visible_on_front>
                    </pending_payment>
                </states>
            </order>
        </sales>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MageMods_OrderMonitor>
                    <files>
                        <default>MageMods_OrderMonitor.csv</default>
                    </files>
                </MageMods_OrderMonitor>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ordermonitor translate="title" module="ordermonitor">
                                            <title>Order Monitor</title>
                                            <sort_order>0</sort_order>
                                        </ordermonitor>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <routers>
            <sales>
                <args>
                    <modules>
                        <MageMods_OrderMonitor before="Mage_Sales">MageMods_OrderMonitor</MageMods_OrderMonitor>
                    </modules>
                </args>
            </sales>
        </routers>
        <translate>
            <modules>
                <MageMods_OrderMonitor>
                    <files>
                        <default>MageMods_OrderMonitor.csv</default>
                    </files>
                </MageMods_OrderMonitor>
            </modules>
        </translate>
        <layout>
            <updates>
                <ordermonitor module="MageMods_OrderMonitor">
                    <file>magemods_ordermonitor.xml</file>
                </ordermonitor>
            </updates>
        </layout>
    </frontend>
    <default>
        <ordermonitor>
            <customer>
                <cancel_new>0</cancel_new>
                <cancel_pending>0</cancel_pending>
                <cancel_status></cancel_status>
            </customer>
            <cron>
                <cancel_pending>0</cancel_pending>
                <cancel_after>120</cancel_after>
                <cancel_status></cancel_status>
            </cron>
        </ordermonitor>
    </default>
</config>
